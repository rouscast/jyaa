<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">


	<persistence-unit name="jyaa2016">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>model.Activity</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<!--<property name="hibernate.connection.password" value="jyaa2016" /> -->
			<property name="hibernate.connection.password" value="" />
			<!-- <property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/jyaa2014_grupo2" 
				/> -->
			<property name="hibernate.connection.url" value="jdbc:mysql://192.168.0.125:3306/jyaa2016" />
			<!-- <property name="hibernate.connection.username" value="jyaa2014_grupo2" 
				/> -->
			<property name="hibernate.connection.username" value="java" />
			<property name="hibernate.connection.password" value="java" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="show_sql" value="true" />

			<!-- <property name="hibernate.c3p0.max_size" value="100" /> -->
			<!-- <property name="hibernate.c3p0.min_size" value="0" /> -->
